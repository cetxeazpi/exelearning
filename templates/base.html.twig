<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="robots" content="noindex">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset("favicon.ico") }}">
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {# include own css #}
        <link rel="stylesheet" href="{{ asset('style/server.css') }}">
        {% endblock %}
        <link class="exe" rel="stylesheet" href="{{ asset('style/workarea/custom.css') }}">
        <script class="exe" src="{{ asset('libs/jquery/jquery.min.js') }}"></script>
        {# Inject additional HTML at the end of <head> for workarea only #}
        {% if sys_pref('additional_html.head') %}
            {{ sys_pref('additional_html.head')|raw }}
        {% endif %}
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body class="{% block class %}{% endblock %}" id="{% block id %}{% endblock %}">
        {# Inject additional HTML right after <body> for workarea only #}
        {% if sys_pref('additional_html.top') %}
            {{ sys_pref('additional_html.top')|raw }}
        {% endif %}        
        {% block body %}{% endblock %}
        <script src="{{ asset('app/workarea/custom.js') }}"></script>
        {# Inject additional HTML before </body> for workarea only #}
        {% if sys_pref('additional_html.footer') %}
            {{ sys_pref('additional_html.footer')|raw }}
        {% endif %}        
    </body>
</html>
