{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ 'admin.maintenance.title'|trans }}{% endblock %}

{% block main %}
    {% form_theme form '@EasyAdmin/crud/form_theme.html.twig' %}
    <div class="ea-content">
        <div class="content-panel">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <h5 class="mb-0">{{ 'admin.maintenance.title'|trans }}</h5>
                                {% if maintenance.enabled %}
                                    <span class="badge bg-danger">{{ 'admin.maintenance.status_on'|trans }}</span>
                                {% else %}
                                    <span class="badge bg-success">{{ 'admin.maintenance.status_off'|trans }}</span>
                                {% endif %}
                            </div>

                            <p class="text-muted mb-4">
                                {{ 'admin.maintenance.last_changed'|trans }}:
                                {{ maintenance.updatedAt ? maintenance.updatedAt|date('Y-m-d H:i') : '-' }}
                                {% if maintenance.updatedBy %}
                                    ({{ maintenance.updatedBy }})
                                {% endif %}
                            </p>

                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.enabled) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.message) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.scheduledEndAt) }}
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">{{ 'admin.maintenance.save'|trans }}</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
