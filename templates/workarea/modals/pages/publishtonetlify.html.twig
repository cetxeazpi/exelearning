<div class="modal fade" id="modalPublishToNetlify" tabindex="-1" aria-labelledby="modalPublishToNetlifyLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable" style="height:85vh; overflow: visible;">
    <div class="modal-content">
      <style>
        /* Keep dropdown usable: allow overflow and ensure it stays above modal content */
        #modalPublishToNetlify .modal-body { overflow: visible; }
        #modalPublishToNetlify .dropdown-menu { z-index: 1090; width: 100%; max-height: 45vh; overflow: auto; }
      </style>
      <div class="modal-header">
        <h5 class="modal-title" id="modalPublishToNetlifyLabel">{{ 'Publish to Netlify' | trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Hide' | trans }}"></button>
      </div>

      <div class="modal-body">
        <div id="nl-auth" class="mb-3">
          <label class="form-label">{{ 'Netlify access token' | trans }}</label>
          <div class="input-group">
            <input id="nl-token" type="password" class="form-control" placeholder="{{ 'Paste your Netlify token…' | trans }}">
            <button id="nl-save-token" class="btn btn-outline-primary" type="button">{{ 'Connect' | trans }}</button>
          </div>
          <div class="form-text">
            {{ 'Create a personal access token in' | trans }} <a href="https://app.netlify.com/user/applications" target="_blank" rel="noopener">Netlify</a>.
          </div>
        </div>

        <div id="nl-select" class="d-none">
          <div class="mb-2">
            <label class="form-label">{{ 'Site' | trans }}</label>
            <div class="d-flex gap-2">
              <div class="dropdown w-100">
                <button id="nl-btn-site" class="btn btn-outline-secondary w-100 text-start dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                  <span id="nl-btn-site-text" class="text-muted">{{ 'Choose or create…' | trans }}</span>
                </button>
                <div id="nl-site-menu" class="dropdown-menu p-0" style="max-height: 45vh; overflow:auto; width:100%;">
                  <div class="p-2 border-bottom bg-body position-sticky" style="top:0; z-index:1;">
                    <div class="form-floating">
                      <input id="nl-site-input" type="text" class="form-control" placeholder="{{ 'Type to filter or create…' | trans }}" aria-describedby="nl-site-help">
                      <label for="nl-site-input">{{ 'Type to filter or create…' | trans }}</label>
                      <div id="nl-site-input-feedback" class="invalid-feedback">{{ 'Site name not available or invalid (letters, numbers, hyphens).' | trans }}</div>
                    </div>
                    <div id="nl-site-help" class="form-text mt-1">{{ 'Press Enter to create if it doesn’t exist.' | trans }}</div>
                  </div>
                  <div id="nl-site-list" class="list-group list-group-flush"></div>
                  <button id="nl-create-inline" type="button" class="list-group-item list-group-item-action d-none">
                    <span class="me-2" aria-hidden="true"><svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg" role="img"><path d="M8 1a7 7 0 1 0 7 7A7.008 7.008 0 0 0 8 1zm3 7.75H8.75V12h-1.5V8.75H5V7.25h2.25V5h1.5v2.25H11z"/></svg></span>
                    {{ 'Create' | trans }} “<span id="nl-create-name"></span>”
                  </button>
                </div>
              </div>
              <button id="nl-btn-refresh" class="btn btn-outline-secondary" type="button" title="{{ 'Refresh sites' | trans }}">
                <span class="auto-icon" aria-hidden="true">autorenew</span>
              </button>
            </div>
            <div class="form-text">{{ 'Pick an existing site or type a new name to create it.' | trans }}</div>
          </div>

          <div id="nl-alert" class="alert alert-danger d-none" role="alert"></div>

          <div id="nl-progress" class="mt-3 d-none">
            <h6 class="mb-2">{{ 'Publishing…' | trans }}</h6>
            <div class="progress">
              <div id="nl-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div id="nl-progress-msg" class="small text-muted mt-2" aria-live="polite">{{ 'Preparing…' | trans }}</div>
          </div>

          <div id="nl-done" class="mt-3 d-none">
            <h6 class="mb-2"><span class="badge text-bg-success"><span class="auto-icon" aria-hidden="true">check</span> {{ 'Published' | trans }}</span></h6>
            <p class="mb-1 d-flex gap-2 flex-wrap">
              <a id="nl-site-url" href="#" target="_blank" rel="noopener" class="btn btn-primary btn-sm d-none">{{ 'Visit site' | trans }}</a>
            </p>
            <p id="nl-done-text" class="text-muted mb-0"></p>
          </div>
        </div>

        <!-- legacy progress removed -->
