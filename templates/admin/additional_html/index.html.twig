{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Additional HTML{% endblock %}

{% block main %}
    {% form_theme form '@EasyAdmin/crud/form_theme.html.twig' %}
    <div class="ea-content">
        <div class="content-panel">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="alert alert-info" role="alert">
                        These settings allow you to specify HTML that you want added to the Workarea pages. You can set HTML that will be added within the HEAD tag for the page, immediately after the BODY tag has been opened, or immediately before the body tag is closed.
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                                <div class="mb-3">
                                    {{ form_row(form.headHtml) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.topOfBodyHtml) }}
                                </div>
                                <div class="mb-3">
                                    {{ form_row(form.footerHtml) }}
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">Save changes</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
