<div class="modal fade" id="modalPublishToGithub" tabindex="-1" aria-labelledby="modalPublishToGithubLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalPublishToGithubLabel">{{ "Publish to GitHub" | trans }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Hide' | trans }}"></button>
      </div>
      <div class="modal-body">
        <div id="gh-step-auth" class="gh-step">
          <p>{{ 'Authenticate with GitHub' | trans }}</p>
          <div class="d-flex gap-2 flex-wrap">
            <a id="gh-auth-btn" class="btn btn-primary" href="{{ path('oauth_github_connect') }}?popup=1" target="_blank" rel="noopener">{{ 'Authenticate with GitHub' | trans }}</a>
          </div>
          <div id="gh-auth-status" class="small text-muted mt-2"></div>
        </div>

        <div id="gh-step-repo" class="gh-step d-none">
          <h6>{{ 'Select repository' | trans }}</h6>
          <div class="row g-2 align-items-end mb-2">
            <div class="col-md-6">
              <label for="gh-repo-filter" class="form-label">{{ 'Filter' | trans }}</label>
              <input id="gh-repo-filter" type="text" class="form-control" placeholder="owner/name" />
            </div>
          </div>
          <div class="mb-3">
            <select id="gh-repo-select" class="form-select"></select>
          </div>
          <div class="mb-3">
            <button id="gh-refresh-repos" class="btn btn-outline-secondary btn-sm">{{ 'Reload' | trans }}</button>
          </div>
          <hr/>
          <h6>{{ 'Create repository' | trans }}</h6>
          <div class="row g-2 align-items-end">
            <div class="col-md-6">
              <label for="gh-new-repo" class="form-label">{{ 'Name' | trans }}</label>
              <input id="gh-new-repo" type="text" class="form-control" placeholder="my-pages" />
            </div>
            <div class="col-md-4">
              <label for="gh-new-visibility" class="form-label">{{ 'Visibility' | trans }}</label>
              <select id="gh-new-visibility" class="form-select">
                <option value="public">{{ 'Public' | trans }}</option>
                <option value="private">{{ 'Private' | trans }}</option>
              </select>
            </div>
            <div class="col-md-2">
              <button id="gh-create-repo" class="btn btn-success w-100">{{ 'Create' | trans }}</button>
            </div>
          </div>
        </div>

        <div id="gh-step-confirm" class="gh-step d-none">
          <h6>{{ 'Confirm publish target' | trans }}</h6>
          <p id="gh-confirm-text" class="mb-2"></p>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="1" id="gh-overwrite">
            <label class="form-check-label" for="gh-overwrite">{{ 'Overwrite contents?' | trans }}</label>
          </div>
        </div>

        <div id="gh-step-progress" class="gh-step d-none">
          <h6>{{ 'Publishingâ€¦' | trans }}</h6>
          <div class="progress">
            <div id="gh-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <div id="gh-progress-msg" class="small text-muted mt-2"></div>
        </div>

        <div id="gh-step-done" class="gh-step d-none">
          <h6>{{ 'Published' | trans }}</h6>
          <p class="mb-0"><a id="gh-view-site" href="#" target="_blank" class="btn btn-success">{{ 'View site' | trans }}</a></p>
          <p class="mt-2"><a id="gh-view-repo" href="#" target="_blank">{{ 'Open repository' | trans }}</a></p>
          <div id="gh-pages-manual" class="alert alert-warning d-none mt-3"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Hide' | trans }}</button>
        <button id="gh-next" type="button" class="btn btn-primary d-none">{{ 'Publish' | trans }}</button>
      </div>
    </div>
  </div>
</div>
