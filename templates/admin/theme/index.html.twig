{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Theme{% endblock %}

{% block main %}
    {% form_theme form '@EasyAdmin/crud/form_theme.html.twig' %}
    <div class="ea-content">
        <div class="content-panel">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <div class="card shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h5 class="mb-3">Customize Login and Favicon</h5>

                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <div class="small text-muted">Current login image:</div>
                                    {% if settings.loginImagePath %}
                                        <img src="{{ settings.loginImagePath }}" alt="Login image" class="img-fluid border" />
                                    {% else %}
                                        <div class="text-muted">None</div>
                                    {% endif %}
                                </div>
                                <div class="col-md-4">
                                    <div class="small text-muted">Current logo:</div>
                                    {% if settings.loginLogoPath %}
                                        <img src="{{ settings.loginLogoPath }}" alt="Login logo" class="img-fluid border" />
                                    {% else %}
                                        <div class="text-muted">None</div>
                                    {% endif %}
                                </div>
                                <div class="col-md-4">
                                    <div class="small text-muted">Current favicon:</div>
                                    {% if settings.faviconPath %}
                                        <img src="{{ settings.faviconPath }}" alt="Favicon" class="img-fluid border" style="max-width:64px" />
                                    {% else %}
                                        <div class="text-muted">None</div>
                                    {% endif %}
                                </div>
                            </div>

                            {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data' } }) }}
                                <div class="mb-2">{{ form_row(form.loginImage) }}</div>
                                <div class="mb-3">{{ form_row(form.removeLoginImage) }}</div>

                                <div class="mb-2">{{ form_row(form.loginLogo) }}</div>
                                <div class="mb-3">{{ form_row(form.removeLoginLogo) }}</div>

                                <div class="mb-2">{{ form_row(form.favicon) }}</div>
                                <div class="mb-3">{{ form_row(form.removeFavicon) }}</div>
                                <div class="d-flex justify-content-end">
                                    <button class="btn btn-primary" type="submit">Save</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
